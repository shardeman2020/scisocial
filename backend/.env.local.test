# ==============================================
# SCISOCIAL BACKEND - LOCAL PRODUCTION TEST
# ==============================================
# This simulates production environment locally

# Environment
NODE_ENV=production
PORT=3001

# Database (your local PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=sci_social

# Redis (your local Redis)
REDIS_HOST=localhost
REDIS_PORT=6379

# CORS (allow localhost for testing)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# API Keys (using your current values)
CROSSREF_API_EMAIL=your-email@example.com
ANTHROPIC_API_KEY=your-api-key-here

# Email (optional for local testing - won't actually send)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=apikey
EMAIL_PASSWORD=test-password
EMAIL_FROM=noreply@scisocial.local
EMAIL_FROM_NAME=SciSocial

# Weekly digest (disabled for local testing)
DIGEST_CRON_SCHEDULE=0 0 * * 0

# File uploads
MAX_FILE_SIZE=52428800
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Security (test values - change in real production!)
JWT_SECRET=test-jwt-secret-change-in-production-min-64-chars-long-random-string
JWT_EXPIRATION=7d

# Rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# Application URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3000/admin
BACKEND_URL=http://localhost:3001
